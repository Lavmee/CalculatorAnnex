<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorButton">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/background_rounded</item>
        <item name="android:foreground">@drawable/riple_foreground_rounded</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="CalculatorButtonPrimary" parent="CalculatorButton">
        <item name="android:textColor">?attr/keyColorPrimary</item>
    </style>

    <style name="CalculatorButtonSecondary" parent="CalculatorButton">
        <item name="android:textColor">?attr/keyColorSecondary</item>
    </style>

    <style name="CalculatorButtonTertiary" parent="CalculatorButton">
        <item name="android:textColor">?attr/keyColorTertiary</item>
    </style>

    <style name="AnnexEditText">
        <item name="android:background">@null</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">text</item>
        <item name="android:textIsSelectable">true</item>
    </style>
</resources>